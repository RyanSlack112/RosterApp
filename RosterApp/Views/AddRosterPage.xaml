<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RosterApp.Views.AddRosterPage"
             Title="">
    
    <VerticalStackLayout Padding="20">

        <!-- Date Picker -->
        <Label Text="Date" />
        <DatePicker x:Name="DatePicker" />

        <!-- Start Time -->
        <Label Text="Start Time" />
        <TimePicker x:Name="StartTimePicker" />

        <!-- End Time -->
        <Label Text="End Time" />
        <TimePicker x:Name="EndTimePicker" />

        <!-- Submit and Reset Buttons -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Spacing="10">
            <Button Text="Submit" Clicked="OnSubmitClicked" HorizontalOptions="FillAndExpand" CornerRadius="20" />
            <Button Text="Reset" Clicked="OnResetClicked" HorizontalOptions="FillAndExpand" CornerRadius="20" />
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>
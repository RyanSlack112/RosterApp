<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RosterApp.Views.HomePage"
             Title="">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to Your App!" HorizontalOptions="Center" FontSize="Large" Margin="0,20"/>


        <StackLayout Margin="20">
            <Label Text="Functions" FontSize="Medium" Margin="0,10"/>
            <StackLayout Margin="10">
                <Label Text="Add Roster" FontSize="Small"/>
                <Label Text="Adds an entry to the roster" FontSize="Micro" Margin="0,0,0,5"/>
            </StackLayout>
            <StackLayout Margin="10">
                <Label Text="View Roster" FontSize="Small"/>
                <Label Text="View all upcoming entries and search by date" FontSize="Micro" Margin="0,0,0,5"/>
            </StackLayout>
        </StackLayout>


        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,30">
            <Button x:Name="AddRosterButton" Text="Add to Roster" Clicked="OnAddRosterClicked" HorizontalOptions="CenterAndExpand" Margin="5"/>
            <Button x:Name="ViewRosterButton" Text="View Roster" Clicked="OnViewRosterClicked" HorizontalOptions="CenterAndExpand" Margin="5"/>
        </StackLayout>
    </StackLayout>

</ContentPage>